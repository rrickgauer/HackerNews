    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "checklists page",
            "url": "http://127.0.0.1:6003/",
            "webRoot": "${workspaceFolder}/src/hackernews/static/js"
        },
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",

            "request": "launch",
            "module": "flask",
            "env": {
                // "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "--app",
                "src/hackernews/app.py",
                "run",
                
                

            ],
            "jinja": true,
            "autoStartBrowser": true,
            "autoReload": {
                "enable": true
            },
        }
    ]
}